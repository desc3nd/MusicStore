@model MusicStore.Models.Album

@{
    ViewData["Title"] = "Details";
}

<div class="card" role="region">
    <div class="card-header">
        <h2>
            Album: @Model.Title
        </h2>
    </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h4>Details</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label label"></label>
                        <input asp-for="Title" class="form-control" readonly />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ArtistId" class="control-label label"></label>
                        <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.Artists" disabled></select>
                        <span asp-validation-for="ArtistId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GenreId" class="control-label label"></label>
                        <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genres" disabled></select>
                        <span asp-validation-for="GenreId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="YearOfPublish" class="control-label label"></label>
                        <input asp-for="YearOfPublish" class="form-control" type="number" min="1900" max="2022" readonly/>
                        <span asp-validation-for="YearOfPublish" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfPublish" class="control-label label"></label>
                        <input asp-for="DateOfPublish" class="form-control" type="date" readonly/>
                        <span asp-validation-for="DateOfPublish" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check form__item">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="SwearWords" disabled /> @Html.DisplayNameFor(model => model.SwearWords)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label label"></label>
                        <textarea asp-for="Description" class="form-control" readonly></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <h4>Other</h4>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label label"></label>
                        <input asp-for="Price" class="form-control" type="number" min="0.00" max="10000.00" step="0.01" readonly/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label label"></label>
                        <input asp-for="Amount" class="form-control" type="number" min="0" max="10000" step="1"readonly />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col">
                    <h4>Tracks</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Time</th>
                                <th>Swear words</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var track in Model.Tracks)
                            {
                                <tr>
                                    <td>@track.Title</td>
                                    <td>@track.Time.ToString("hh:mm")</td>
                                    <td>@track.SwearWords</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer">
        </div>
</div>
